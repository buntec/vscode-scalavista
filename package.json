{
    "name": "vscode-scalavista",
    "displayName": "Scalavista",
    "description": "IDE-like features for Scala - type/scaladoc on hover, auto-completion, goto definition, errors/warnings as you type",
    "categories": [
        "Programming Languages",
        "Linters",
        "Other"
    ],
    "keywords": [
        "scala"
    ],
    "publisher": "buntec",
    "author": {
        "name": "Christoph Bunte"
    },
    "license": "SEE LICENSE IN LICENSE",
    "icon": "scala-spiral.png",
    "homepage": "https://github.com/buntec/vscode-scalavista/blob/master/README.md",
    "repository": {
        "type": "git",
        "url": "https://github.com/buntec/vscode-scalavista.git"
    },
    "version": "0.1.20",
    "engines": {
        "vscode": "^1.30.0"
    },
    "activationEvents": [
        "onLanguage:scala"
    ],
    "main": "./extension.js",
    "contributes": {
        "languages": [
            {
                "id": "scala",
                "aliases": [
                    "Scala",
                    "scala"
                ],
                "extensions": [
                    ".scala"
                ]
            }
        ],
        "configuration": {
            "title": "Scalavista",
            "properties": {
                "Scalavista.defaultScalaVersion": {
                    "type": "string",
                    "default": "2.13",
                    "description": "The Scala (binary) version used in the absence of scalavista.json."
                },
                "Scalavista.diagnosticsRefreshPeriod": {
                    "type": "number",
                    "default": 1000,
                    "description": "The time in ms between refreshes of the diagnostics (increase this if your machine is slow)."
                },
                "Scalavista.debugMode": {
                    "type": "boolean",
                    "default": false,
                    "description": "Run server in debug mode to get extensive logs."
                }
            }
        },
        "commands": [
            {
                "command": "extension.restartServer",
                "category": "Scalavista",
                "title": "Restart the language server."
            }
        ]
    },
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^8.10.25",
        "eslint": "^4.11.0",
        "standard": "^14.0.0",
        "typescript": "^3.1.4",
        "vscode": "^1.1.25"
    },
    "dependencies": {
        "axios": "^0.19.0",
        "ramda": "^0.26.1",
        "request": "^2.88.0",
        "semver": "^6.3.0",
        "uuid": "^3.3.3"
    },
    "extensionDependencies": [
        "scala-lang.scala"
    ]
}